{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "koishi-plugin-*": [ "packages/plugin-*/dist" ]
    }
  },
  "include": [
    "cli/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "require": [ "tsconfig-paths/register" ]
  }
}
